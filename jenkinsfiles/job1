pipeline {
    agent any
    stages {
        stage('Clean') {
            steps {
                deleteDir()
            }
        }
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                ansiblePlaybook(
                        playbook: './ansible/get-updatable-packages.yml',
                        inventory: './ansible/inventory/hosts.ini',
                        credentialsId: './ansible/ansible_key',
                )
            }
        }
    }
}
